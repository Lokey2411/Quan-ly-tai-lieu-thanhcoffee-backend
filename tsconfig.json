{
	"compilerOptions": {
		"outDir": "./build", // Chỉ định folder đích cho các file biên dịch
		"module": "commonjs",
		"target": "es6",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
